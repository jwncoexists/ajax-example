$("ul.errors").html("")
<% if @course.errors.any? %>
  <% @course.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".course-index").html("<%= escape_javascript(render 'index') %>")
  $("#course-modal").modal("hide")
<% end %>
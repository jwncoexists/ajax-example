    <% @courses.each do |course| %>
      <tr id="course_<%= course.id %>">
        <td><%= course.code %></td>
        <td><%= course.title %></td>
        <td><%= course.description %></td>
        <td><%= course.credits %></td>
        <td><%= link_to 'Edit', edit_course_path(course), remote: true, class: "btn btn-primary " %></td>
        <td><%= link_to 'Delete', course, method: :delete, remote: true, class: "btn btn-danger", data: { confirm: 'Are you sure you want to delete this course?' }  %></td>
      </tr>
    <% end %>